{% block body %}

    {% include 'header.html.twig' %}

    <main>

        <h1>Cursus pour le thème: {{ theme.name }}</h1>
        <section class="formation">
        {% for cursus in cursus %}
            <article>
                <p>{{ cursus.name }}</p>
                <div>
                    <button>
                        <a href="{{ path('app_cursus_lesson', { 'themeId': theme.id, 'cursusId': cursus.id }) }}">
                            Voir les leçons
                        </a>
                    </button>
                    {% if userHasPurchasedAllLessonsInCursus[cursus.id] %}
                    {% else %}
                        <p>Prix: {{cursus.prix}} €</p>
                        <button>
                            <a href="{{ path('app_cursus_buy', {'themeId': theme.id, 'cursusId': cursus.id}) }}">
                                Acheter
                            </a>
                        </button>
                    {% endif %}
                </div>
            </article>
        {% endfor %}
        </section>

    </main>

    {% include 'footer.html.twig' %}
{% endblock %}